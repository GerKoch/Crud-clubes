<div class="container text-center">
    <div class="row">
        <div class="col">
            <div class="card-header">
                <p>Nombre Equipo</p>
            </div>
            <div>
                <ul>
                    {{#each items as |item|}}
                    <p>{{item.name}}</p>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col">
            <div class="card-header">
                <p>País</p>
            </div>
            <div>
                <ul>
                    {{#each items as |item|}}
                    <p>{{item.area.name}}</p>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col">
            <div class="card-header">
                <p>Acción</p>
            </div>
            {{#each items as |item|}}
            <p>Ver, Editar, Eliminar</p>
            {{/each}}
        </div>
    </div>
</div>